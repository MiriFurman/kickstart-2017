import React from 'react';

class Counter extends React.Component {

    constructor() {
        super();
        this.state = {
            count: 0
        };
    }

    render() {
        return (
            <div className='counter'>
                <h1 className='counter-title'>Count:</h1>
                <span className='counter-value'>{this.state.count}</span>
            </div>
        );
    }
}

export default Counter;